<resources>
<!--     Base application theme. -->
    <style name="Theme.ExampleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/primary_color</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <!-- Navigation animations -->
        <item name="android:windowAnimationStyle">@style/MyCustomActivityAnimation</item>

<!--    TODO    -->
        <item name="primaryTextColor">@color/text_tertiary</item>
        <item name="secondaryTextColor">@color/neonColorTextSecondary</item>
        <item name="textFieldColor">@color/inputs</item>
        <item name="iconsColorsPrimary">@color/icons</item>
        <item name="bubbleSenderColor">@color/message_me</item>
        <item name="bubbleReceiverColor">@color/message_other</item>
        <item name="iconsColorsSecondary">@color/primary_color</item>
        <item name="backgroundPrimary">@color/main</item>
    </style>

<!--  Neon theme  -->
    <style name="Theme.App.Neon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="primaryTextColor">@color/white</item>
        <item name="secondaryTextColor">@color/neonColorTextSecondary</item>
        <item name="bubbleSenderColor">@color/neonBubbleSenderColor</item>
        <item name="bubbleReceiverColor">@color/neonBubbleReceiverColor</item>
        <item name="textFieldColor">@color/neonTextFieldColor</item>
        <item name="iconsColorsPrimary">@color/neonIconsColorsPrimary</item>
        <item name="iconsColorsSecondary">@color/neonIconsColorsSecondary</item>
        <item name="backgroundPrimary">@drawable/neon_background</item>
    </style>

<!-- Mint theme   -->
    <style name="Theme.App.Mint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="primaryTextColor">@color/mintColorPrimary</item>
        <item name="secondaryTextColor">@color/mintColorPrimaryDark</item>
        <item name="bubbleSenderColor">@color/mintColorAccent</item>
        <item name="bubbleReceiverColor">@color/neonBubbleReceiverColor</item>
        <item name="textFieldColor">@color/mintColorAccent</item>
        <item name="iconsColorsPrimary">@color/mintColorPrimaryDark</item>
        <item name="iconsColorsSecondary">@color/alert_icon_color</item>
        <item name="backgroundPrimary">@color/light_blue</item>
    </style>

</resources>
