<resources>
<!--     Base application theme. -->
    <style name="Theme.ExampleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/primary_color</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <!-- Navigation animations -->
        <item name="android:windowAnimationStyle">@style/MyCustomActivityAnimation</item>

<!--    TODO    -->
        <item name="primaryTextColor">@color/baseColorTextPrimary</item>
        <item name="secondaryTextColor">@color/baseColorTextSecondary</item>
        <item name="tertiaryTextColor">@color/baseColorTertiary</item>
        <item name="bubbleSenderColor">@color/baseBubbleSenderColor</item>
        <item name="bubbleReceiverColor">@color/baseBubbleReceiverColor</item>
        <item name="textFieldColor">@color/baseTextFieldColor</item>
        <item name="iconsColorsPrimary">@color/baseIconsColorsPrimary</item>
        <item name="iconsColorsSecondary">@color/baseIconsColorsSecondary</item>
        <item name="backgroundPrimary">@drawable/bg_spika</item>
        <item name="spikaLogo">@drawable/spika_mint_logo</item>
    </style>

    <!--  Dark Marine theme  -->
    <style name="Theme.App.DarkMarine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>

        <item name="primaryTextColor">@color/darkMarineColorTextPrimary</item>
        <item name="tertiaryTextColor">@color/darkMarineColorTertiary</item>
        <item name="secondaryTextColor">@color/darkMarineColorTextSecondary</item>
        <item name="bubbleSenderColor">@color/darkMarineBubbleSenderColor</item>
        <item name="bubbleReceiverColor">@color/darkMarineBubbleReceiverColor</item>
        <item name="textFieldColor">@color/darkMarineTextFieldColor</item>
        <item name="iconsColorsPrimary">@color/darkMarineIconsColorsPrimary</item>
        <item name="iconsColorsSecondary">@color/darkMarineIconsColorsSecondary</item>
        <item name="backgroundPrimary">@drawable/bg_darkmarine</item>
        <item name="spikaLogo">@drawable/spika_darkmarine_logo</item>
    </style>


<!--  Neon theme  -->
    <style name="Theme.App.Neon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">#FF61187B</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="primaryTextColor">@color/neonColorTextPrimary</item>
        <item name="tertiaryTextColor">@color/neonColorTertiary</item>
        <item name="secondaryTextColor">@color/neonColorTextSecondary</item>
        <item name="bubbleSenderColor">@color/neonBubbleSenderColor</item>
        <item name="bubbleReceiverColor">@color/neonBubbleReceiverColor</item>
        <item name="textFieldColor">@color/neonTextFieldColor</item>
        <item name="iconsColorsPrimary">@color/neonIconsColorsPrimary</item>
        <item name="iconsColorsSecondary">@color/neonIconsColorsSecondary</item>
        <item name="backgroundPrimary">@drawable/bg_neon</item>
        <item name="spikaLogo">@drawable/spika_neon_logo</item>
    </style>

<!-- Mint theme   -->
    <style name="Theme.App.LightGreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="primaryTextColor">@color/mintColorTextPrimary</item>
        <item name="secondaryTextColor">@color/mintColorTextSecondary</item>
        <item name="tertiaryTextColor">@color/mintColorTertiary</item>
        <item name="bubbleSenderColor">@color/mintBubbleSenderColor</item>
        <item name="bubbleReceiverColor">@color/mintBubbleReceiverColor</item>
        <item name="textFieldColor">@color/mintTextFieldColor</item>
        <item name="iconsColorsPrimary">@color/mintIconsColorsPrimary</item>
        <item name="iconsColorsSecondary">@color/mintIconsColorsSecondary</item>
        <item name="backgroundPrimary">@drawable/bg_spika</item>
        <item name="spikaLogo">@drawable/spika_mint_logo</item>
    </style>

</resources>
