<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.Dialog_Dim" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--  Different corner styles  -->
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="big_profile_picture">
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="CustomTextHeading" parent="Theme.ExampleApp">
        <item name="font">@font/roboto_flex</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="CustomTextBody" parent="Theme.ExampleApp">
        <item name="font">@font/roboto_flex</item>
        <item name="android:textSize">@dimen/twelve_sp_text</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="reply_image">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="SenderBubbleStyle">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="ReceiverBubbleStyle">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="ReceiverReactionStyle">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SenderReactionStyle">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="round">
        <item name="cornerSize">10%</item>
    </style>

    <!--  Switch style  -->
<!--    <style name="CustomSwitch" parent="Theme.AppCompat.Light">-->
<!--        <item name="colorControlActivated">@color/primary_color</item>-->
<!--        <item name="colorSwitchThumbNormal">@color/text_tertiary</item>-->
<!--        <item name="android:colorForeground">@color/text_tertiary</item>-->
<!--    </style>-->

    <!--  CheckBox style  -->
    <style name="CustomCheckBox" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/primary_color</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/text_tertiary</item> <!-- for check state -->
    </style>

    <!--  Selected text style  -->
    <style name="CustomSelectText" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/selected_text</item>
        <item name="colorControlActivated">@color/selected_text</item>
    </style>

    <!--  Toolbar tiles style  -->
    <style name="CustomTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/thirty_two_sp_text</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomTitleNormal" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fourteen_sp_text</item>
        <item name="android:fontFamily">@font/roboto_flex</item>
    </style>

    <!-- Toolbar style - SearchView  -->
    <style name="CustomToolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/primaryTextColor</item>
        <item name="android:colorControlNormal">?attr/primaryTextColor</item>
        <item name="android:closeIcon">@drawable/img_search_close</item>
    </style>

    <style name="YourCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>


    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
    </style>

    <!--  Bottom sheet style  -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--  Navigation animations  -->
    <style name="MyCustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/nav_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/nav_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/nav_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/nav_slide_out_right</item>
    </style>


    <style name="FirstOptionStyle">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>

    <style name="OptionStyle">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="LastOptionStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>


</resources>
