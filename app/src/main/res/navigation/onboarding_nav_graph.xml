<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.clover.studio.exampleapp.ui.onboarding.number_registration.RegisterNumberFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_register_number" >
        <action
            android:id="@+id/action_splashFragment_to_countryPickerFragment"
            app:destination="@id/countryPickerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_splashFragment_to_verificationFragment"
            app:destination="@id/verificationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_splashFragment_to_accountCreationFragment"
            app:destination="@id/accountCreationFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/countryPickerFragment"
        android:name="com.clover.studio.exampleapp.ui.onboarding.country_picker.CountryPickerFragment"
        android:label="fragment_country_picker"
        tools:layout="@layout/fragment_country_picker" >
        <action
            android:id="@+id/action_countryPickerFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.clover.studio.exampleapp.ui.onboarding.verification.VerificationFragment"
        android:label="VerificationFragment" >
        <action
            android:id="@+id/action_verificationFragment_to_accountCreationFragment"
            app:destination="@id/accountCreationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/accountCreationFragment"
        android:name="com.clover.studio.exampleapp.ui.onboarding.account_creation.AccountCreationFragment"
        android:label="fragment_account_creation"
        tools:layout="@layout/fragment_account_creation" />
</navigation>