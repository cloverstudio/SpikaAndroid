<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_selected_media"
        android:layout_width="@dimen/sixty_four_dp"
        android:layout_height="@dimen/sixty_four_dp"
        android:background="@color/lightGreenPrimaryColor"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_small_media"
        android:layout_width="@dimen/fifty_two_dp"
        android:layout_height="@dimen/fifty_two_dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/two_dp_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</FrameLayout>