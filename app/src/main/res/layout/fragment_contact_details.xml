<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.contact_details.ContactDetailsFragment"
    tools:ignore="RtlSymmetry,ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twenty_dp_margin"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="@dimen/eight_dp_margin"
            android:padding="@dimen/ten_dp_margin"
            android:src="@drawable/img_arrow_back_chat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_pick_avatar"
            android:layout_width="match_parent"
            android:layout_height="393dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/big_profile_picture"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fl_progress_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@android:color/transparent"
            android:elevation="@dimen/five_dp_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_pick_avatar"
            app:layout_constraintEnd_toEndOf="@id/iv_pick_avatar"
            app:layout_constraintStart_toStartOf="@id/iv_pick_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_pick_avatar"
            app:shapeAppearanceOverlay="@style/big_profile_picture">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_gravity="center"
                android:indeterminateOnly="true"
                android:indeterminateTint="@color/primary_color"
                app:layout_constraintBottom_toBottomOf="parent" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twenty_dp_margin"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/username"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/twenty_four_sp_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_pick_avatar" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CustomTextBody"
            android:padding="@dimen/eight_dp_margin"
            android:text="@string/number_example"
            android:textColor="?attr/primaryTextColor"
            app:layout_constraintEnd_toEndOf="@+id/tv_username"
            app:layout_constraintStart_toStartOf="@+id/tv_username"
            app:layout_constraintTop_toBottomOf="@+id/tv_username" />

        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/img_chat"
            app:layout_constraintEnd_toStartOf="@+id/iv_telephone"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_number" />

        <ImageView
            android:id="@+id/iv_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_chat"
            app:layout_constraintTop_toBottomOf="@+id/tv_number" />

        <include
            android:id="@+id/chat_options"
            layout="@layout/chat_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="@dimen/sixteen_dp_margin"
            android:layout_marginEnd="@dimen/sixteen_dp_margin"
            app:layout_anchorGravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_chat" />

        <TextView
            android:id="@+id/tv_blocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen_dp_margin"
            android:drawableStart="@drawable/img_block"
            android:drawablePadding="@dimen/eight_dp_margin"
            android:textAppearance="@style/CustomTextBody"
            android:paddingStart="@dimen/ten_dp_margin"
            android:text="@string/block"
            android:textColor="@color/style_red"
            android:textSize="@dimen/twenty_sp_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_options" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
