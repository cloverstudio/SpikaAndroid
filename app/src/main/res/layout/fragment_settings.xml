<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.main.rooms.RoomsFragment"
    tools:ignore="contentDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/profile_picture"
        layout="@layout/profile_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_dp_margin"
        android:padding="@dimen/eight_dp_margin"
        android:src="@drawable/img_done_button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_enter_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_enter_username"
        app:layout_constraintTop_toTopOf="@+id/et_enter_username" />

    <EditText
        android:id="@+id/et_enter_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp_margin"
        android:layout_marginTop="@dimen/twenty_dp_margin"
        android:background="@drawable/bg_text_field"
        android:hint="@string/enter_username"
        android:inputType="text"
        android:padding="@dimen/sixteen_dp_margin"
        android:textAppearance="@style/CustomTextBody"
        android:textSize="@dimen/fourteen_sp_text"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iv_done"
        app:layout_constraintStart_toStartOf="@+id/fl_options_container"
        app:layout_constraintTop_toBottomOf="@id/profile_picture" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp_margin"
        android:layout_marginTop="@dimen/sixteen_dp_margin"
        android:layout_marginEnd="@dimen/sixteen_dp_margin"
        android:text="@string/enter_username"
        android:textAppearance="@style/CustomTitleBold"
        android:textSize="@dimen/twenty_eight_sp_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="@string/number_example"
        android:textColor="?attr/primaryTextColor"
        app:layout_constraintEnd_toEndOf="@+id/tv_username"
        app:layout_constraintStart_toStartOf="@+id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />

    <FrameLayout
        android:id="@+id/fl_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp_margin"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_version_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_number" />

    <TextView
        android:id="@+id/tv_version_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/twenty_dp_margin"
        android:text="@string/placeholder_title"
        android:textAppearance="@style/CustomTextBody"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="@dimen/eleven_sp_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

