<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_message_other"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="contentDescription">

    <TextView
        android:id="@+id/tv_section_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp_margin"
        android:fontFamily="@font/montserrat"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_dp_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_section_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_message_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/cl_container"
            app:layout_constraintStart_toEndOf="@id/cl_container">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/edited"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/nine_sp_text"
                app:drawableStartCompat="@drawable/img_message_edited"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp_margin"
            android:layout_marginTop="@dimen/two_dp_margin"
            android:layout_marginEnd="@dimen/sixty_four_dp"
            android:layout_marginBottom="@dimen/two_dp_margin"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/iv_user_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            app:layout_constraintVertical_bias="0.00999999">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_reply_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp_margin"
                android:layout_marginTop="@dimen/eight_dp_margin"
                android:layout_marginEnd="@dimen/four_dp_margin"
                android:layout_marginBottom="@dimen/two_dp_margin"
                android:background="@drawable/bg_message_user"
                android:backgroundTint="@color/message_me"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/tv_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_username_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/eight_dp_margin"
                    android:layout_marginTop="@dimen/eight_dp_margin"
                    android:fontFamily="@font/montserrat"
                    android:paddingEnd="@dimen/four_dp_margin"
                    android:text="@string/username"
                    android:textFontWeight="600"
                    android:textSize="@dimen/eleven_sp_text"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/tv_message_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/eight_dp_margin"
                    android:layout_marginBottom="@dimen/eight_dp_margin"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat"
                    android:maxEms="15"
                    android:maxLines="6"
                    android:text="@string/some_message"
                    android:textColorLink="@color/link_primary_color"
                    android:textSize="@dimen/eleven_sp_text"
                    android:visibility="gone"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_username_other"
                    app:layout_constraintTop_toBottomOf="@+id/tv_username_other"
                    app:layout_constraintVertical_bias="0.0" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_reply_media"
                    android:layout_width="@dimen/forty_two_dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/eight_dp_margin"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/four_dp_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_username_other"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_reply_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_reply_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp_margin"
                    android:layout_marginEnd="@dimen/eight_dp_margin"
                    android:layout_marginBottom="@dimen/eight_dp_margin"
                    android:drawablePadding="@dimen/two_dp_margin"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/media"
                    android:textSize="@dimen/eleven_sp_text"
                    android:visibility="gone"
                    app:drawableLeftCompat="@drawable/img_camera_reply"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cv_reply_media"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_username_other"
                    app:layout_constraintTop_toBottomOf="@+id/tv_username_other" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@drawable/bg_message_received"
                android:fontFamily="@font/montserrat"
                android:maxEms="14"
                android:padding="@dimen/ten_dp_margin"
                android:text="@string/some_message"
                android:textAlignment="viewStart"
                android:textColor="@color/text_primary"
                android:textColorLink="@color/link_primary_color"
                android:textSize="@dimen/fourteen_sp_text"
                android:visibility="visible"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_reply_message" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_audio"
                android:layout_width="@dimen/two_hundred_fourteen_dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_dp_margin"
                android:layout_marginEnd="@dimen/two_dp_margin"
                android:layout_marginBottom="@dimen/two_dp_margin"
                android:saveEnabled="false"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/eight_dp_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_audio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_message_received"
                    android:padding="@dimen/two_dp_margin"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_audio_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/eight_dp_margin"
                        android:fontFamily="@font/montserrat"
                        android:foregroundTint="@color/icons"
                        android:text="@string/audio_duration"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_play_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/eight_dp_margin"
                        android:padding="@dimen/four_dp_margin"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/img_play_audio_button" />

                    <SeekBar
                        android:id="@+id/sb_audio"
                        android:layout_width="@dimen/one_hundred_twenty_eight"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fifty_two_dp"
                        android:max="100"
                        android:min="0"
                        android:progress="0"
                        android:progressBackgroundTint="@color/icons"
                        android:progressTint="@color/icons"
                        android:thumbTint="@color/icons"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_audio_duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.578" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/two_dp_margin"
                android:padding="@dimen/ten_dp_margin"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/eight_dp_margin"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_chat_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/image_max_width"
                    android:scaleType="fitCenter"
                    app:layout_constrainedHeight="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_play_button"
                    android:layout_width="@dimen/seventy_eight_dp"
                    android:layout_height="@dimen/seventy_eight_dp"
                    android:layout_marginStart="@dimen/eight_dp_margin"
                    android:layout_marginEnd="@dimen/eight_dp_margin"
                    android:adjustViewBounds="true"
                    android:elevation="@dimen/four_dp_margin"
                    app:layout_constraintBottom_toBottomOf="@+id/cv_video"
                    app:layout_constraintEnd_toEndOf="@+id/cv_video"
                    app:layout_constraintStart_toStartOf="@+id/cv_video"
                    app:layout_constraintTop_toTopOf="@+id/cv_video"
                    app:srcCompat="@drawable/img_camera_black" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dp_margin"
                    app:cardCornerRadius="@dimen/eight_dp_margin"
                    app:layout_constrainedHeight="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_video_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxWidth="@dimen/image_max_width"
                        app:layout_constrainedHeight="true"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_file_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_message_received"
                android:visibility="gone"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dp_margin"
                    android:src="@drawable/img_zip"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_file_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/eight_dp_margin"
                    android:layout_marginTop="@dimen/ten_dp_margin"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:maxEms="8"
                    android:maxLines="3"
                    android:text="@string/placeholder_title"
                    android:textSize="@dimen/fourteen_sp_text"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/iv_file_type"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp_margin"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/number_example"
                    android:textSize="@dimen/fourteen_sp_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_file_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_file_title" />

                <ImageView
                    android:id="@+id/iv_download_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/two_dp_margin"
                    android:layout_marginEnd="@dimen/eight_dp_margin"
                    android:padding="@dimen/four_dp_margin"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_file_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_file_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_file_title"
                    app:srcCompat="@drawable/img_download_file" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/twenty_dp_margin"
            android:layout_height="@dimen/twenty_dp_margin"
            android:layout_marginStart="@dimen/eight_dp_margin"
            android:layout_marginBottom="@dimen/two_dp_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cl_container"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/circle"
            tools:srcCompat="@drawable/img_account_filled" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp_margin"
            android:fontFamily="@font/montserrat"
            android:text="@string/username"
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/twelve_sp_text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/cl_container"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_reacted_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/two_dp_margin"
            android:background="@drawable/bg_message_received"
            android:backgroundTint="@color/message_other"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/eight_dp_margin"
            app:layout_constraintBottom_toBottomOf="@+id/cl_container"
            app:layout_constraintStart_toStartOf="@+id/cl_container"
            app:layout_constraintTop_toBottomOf="@+id/cl_container"
            app:strokeColor="@color/white"
            app:strokeWidth="@dimen/one_dp_margin">

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/tv_reacted_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:padding="@dimen/two_dp_margin"
                android:text="@string/heart_emoji" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/four_dp_margin"
            android:fontFamily="@font/montserrat"
            android:text="@string/audio_duration"
            android:textColor="@color/border"
            android:textSize="@dimen/fourteen_sp_text"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cl_container"
            app:layout_constraintStart_toEndOf="@+id/cl_container"
            app:layout_constraintTop_toTopOf="@+id/cl_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>