<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/username"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_message"
        app:layout_constraintStart_toStartOf="@id/tv_message"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_received"
        android:fontFamily="@font/montserrat"
        android:gravity="center|start"
        android:padding="10dp"
        android:text="@string/some_message"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/iv_emoticons"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_image"
        app:layout_constraintStart_toEndOf="@id/iv_user_image"
        app:layout_constraintTop_toTopOf="@id/iv_user_image" />

    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:scaleType="center"
        android:src="@drawable/img_camera"
        app:layout_constraintEnd_toStartOf="@id/tv_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />

    <ImageView
        android:id="@+id/iv_emoticons"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:scaleType="center"
        android:src="@drawable/img_smiley_gray"
        app:layout_constraintStart_toEndOf="@id/tv_message"
        app:layout_constraintTop_toTopOf="@id/tv_message" />

</androidx.constraintlayout.widget.ConstraintLayout>