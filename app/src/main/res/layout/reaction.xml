<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/eight_dp_margin">

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/tv_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/four_dp_margin"
        android:textSize="@dimen/sixteen_sp_text"
        app:emojiSize="@dimen/twenty_four_dp_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reaction_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/two_dp_margin"
        android:layout_marginEnd="@dimen/eight_dp_margin"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_reaction"
        app:layout_constraintTop_toTopOf="@+id/tv_reaction" />
</androidx.constraintlayout.widget.ConstraintLayout>