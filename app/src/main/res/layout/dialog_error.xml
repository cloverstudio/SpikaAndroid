<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp_margin"
    app:cardCornerRadius="@dimen/sixteen_dp_margin"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:backgroundTint="?attr/secondaryColor">

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CustomTextHeading"
            android:gravity="center"
            android:padding="@dimen/twenty_dp_margin"
            android:text="@string/placeholder_title"
            android:textColor="@color/warningColor"
            android:textSize="@dimen/fourteen_sp_text" />

        <TextView
            android:id="@+id/tv_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CustomTextBody"
            android:gravity="center"
            android:padding="@dimen/twenty_dp_margin"
            android:lineSpacingExtra="@dimen/one_dp_margin"
            android:text="@string/placeholder_title"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/twelve_sp_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/eight_dp_margin"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_first_option"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:textAppearance="@style/CustomTextHeading"
                android:gravity="center"
                android:minHeight="0dp"
                android:padding="@dimen/ten_dp_margin"
                android:text="@string/action"
                android:textAllCaps="false"
                android:textColor="?attr/primaryColor"
                android:textSize="@dimen/fifteen_sp_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_second_option"
                style="@style/CustomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/CustomTextHeading"
                android:gravity="center"
                android:text="@string/action"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
