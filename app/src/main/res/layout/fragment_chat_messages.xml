<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    app:layout_dodgeInsetEdges="bottom"
    tools:context=".ui.main.chat.ChatMessagesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/dark_background_transp"
            android:elevation="@dimen/three_dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/iv_add"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp_margin"
            android:src="@drawable/img_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp_margin"
            android:layout_marginEnd="@dimen/eight_dp_margin"
            app:layout_constraintEnd_toStartOf="@+id/iv_video_call"
            app:layout_constraintStart_toEndOf="@+id/iv_arrow_back"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_chat_image"
                android:layout_width="@dimen/forty_two_dp"
                android:layout_height="@dimen/forty_two_dp"
                android:layout_margin="@dimen/twenty_dp_margin"
                android:background="@drawable/img_selector_background"
                android:backgroundTint="@color/light_blue"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/twenty_dp_margin"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="@dimen/forty_two_dp"
                    android:layout_height="@dimen/forty_two_dp"
                    android:scaleType="center"
                    android:src="@drawable/img_user_placeholder" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp_margin"
                android:fontFamily="@font/montserrat"
                android:text="@string/enter_username"
                android:textSize="@dimen/fourteen_sp_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_chat_image"
                app:layout_constraintTop_toTopOf="@id/cv_chat_image" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp_margin"
                android:fontFamily="@font/montserrat"
                android:text="@string/enter_username"
                android:textSize="@dimen/fourteen_sp_text"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/cv_chat_image"
                app:layout_constraintTop_toBottomOf="@id/tv_chat_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_call_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp_margin"
            android:src="@drawable/img_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_video_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_video"
            app:layout_constraintBottom_toBottomOf="@id/iv_call_user"
            app:layout_constraintEnd_toStartOf="@id/iv_call_user"
            app:layout_constraintTop_toTopOf="@id/iv_call_user" />

        <HorizontalScrollView
            android:id="@+id/hsv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/one_dp"
            app:layout_constraintBottom_toTopOf="@id/iv_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/ll_images_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/twenty_dp_margin"
            android:src="@drawable/img_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/eight_dp_margin"
            android:fillViewport="true"
            android:visibility="visible"
            android:windowSoftInputMode="adjustResize"
            app:layout_constraintBottom_toTopOf="@id/cl_typing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/no_messages_yet"
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/sixteen_sp_text"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/iv_add"
            app:layout_constraintTop_toBottomOf="@id/iv_arrow_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_typing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dp_margin"
            android:background="@drawable/bg_text_field"
            android:padding="@dimen/ten_dp_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_camera"
            app:layout_constraintStart_toEndOf="@id/iv_add">

            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp_margin"
                android:background="@null"
                android:fontFamily="@font/montserrat"
                android:hint="@string/type_here"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:paddingEnd="@dimen/thirty_dp_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.434" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_btn_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ten_dp_margin"
            android:background="@color/white"
            android:src="@drawable/img_smiley"
            app:layout_constraintBottom_toBottomOf="@id/cl_typing"
            app:layout_constraintEnd_toEndOf="@id/cl_typing"
            app:layout_constraintTop_toTopOf="@id/cl_typing" />

        <ImageView
            android:id="@+id/iv_microphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/twenty_dp_margin"
            android:src="@drawable/img_microphone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider" />

        <ImageView
            android:id="@+id/iv_button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/twenty_dp_margin"
            android:src="@drawable/img_button_send"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp_margin"
            android:background="@color/white"
            android:src="@drawable/img_camera"
            app:layout_constraintBottom_toBottomOf="@id/iv_microphone"
            app:layout_constraintEnd_toStartOf="@id/iv_microphone"
            app:layout_constraintStart_toEndOf="@id/cl_typing"
            app:layout_constraintTop_toTopOf="@id/divider" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_marginBottom="@dimen/ten_dp_margin"
            android:background="@color/text_secondary"
            app:layout_constraintBottom_toTopOf="@id/cl_typing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="@dimen/four_dp"
            app:layout_constraintBottom_toTopOf="@id/iv_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <include
                android:id="@+id/bottom_sheet"
                layout="@layout/bottom_sheet_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:behavior_peekHeight="0dp"
                app:layout_anchorGravity="bottom"
                app:layout_behavior="@string/bottom_sheet_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
