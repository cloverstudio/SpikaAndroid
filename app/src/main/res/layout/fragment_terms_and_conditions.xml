<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.terms_and_conditions.TermsAndConditions">

    <ImageView
        android:id="@+id/iv_spika_logo"
        android:layout_width="@dimen/one_hundred_seventy_dp"
        android:layout_height="@dimen/one_hundred_seventy_dp"
        android:layout_margin="@dimen/twenty_dp_margin"
        android:src="?attr/spikaLogo"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_welcome_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_welcome_description"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_margin="@dimen/ten_dp_margin"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/welcome_to_spika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_spika_logo" />

    <TextView
        android:id="@+id/tv_welcome_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp_margin"
        android:layout_marginTop="316dp"
        android:textAppearance="@style/CustomTextBody"
        android:gravity="center"
        android:padding="@dimen/twenty_dp_margin"
        android:text="@string/welcome_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_agree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_title" />

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:padding="@dimen/twenty_dp_margin"
        android:text="@string/agree_and_continue"
        android:textSize="@dimen/eighteen_sp_text"
        android:textColor="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
